<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffffff"
    >

    <RelativeLayout
        android:id="@+id/headerlayout"
        android:background="#ffc4ffb6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/btnPrev"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15.0dip"
            android:src="@drawable/btn_prev"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:visibility="visible"/>

        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="26.0sp"
            android:textStyle="bold"
            android:textColor="#ff37632b"
            android:id="@+id/txtTitle"
            android:text="@string/title_activity_immain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/btnConfirm"
            android:layout_width="28dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15.0dip"
            android:src="@drawable/part_a_btn_check_nav"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:visibility="visible"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bodyLayout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/selectSearchLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/selectAllLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:orientation="horizontal"
                android:background="#d4d4d4">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imgSelectAllCheckBox"
                    android:src="@drawable/checkbox_off"
                    android:scaleType="fitXY"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="22sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/blue_text"
                    android:text="@string/str_select_all"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#b3b3b3"/>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/selectLayout"
                android:layout_below="@+id/selectAllLayout"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="#d4d4d4">
                <EditText
                    android:id="@+id/edtSearch"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/contact_search_edittext_background"
                    android:hint="@string/search_label"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:paddingLeft="35dp"
                    android:paddingRight="30dp"
                    android:textColor="#000000"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:focusableInTouchMode="true"
                    android:textSize="18sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/imageView6"
                    android:src="@drawable/edit_action_search_icon"
                    android:layout_centerVertical="true" />
                <ImageView
                    android:id="@+id/imgCancelSearch"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/search_cancel_button"/>
            </RelativeLayout>
        </LinearLayout>
        <fragment
            android:id="@+id/fragment_contact_list"
            android:name="com.ginko.fragments.ContactListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/selectSearchLayout"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" />

    </RelativeLayout>
</LinearLayout>