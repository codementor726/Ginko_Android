<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_title_bar_top_bottom_padding"
            android:paddingBottom="@dimen/activity_title_bar_top_bottom_padding"
            android:id="@+id/headerlayout"
            android:background="#c4ffb6"
            android:layout_alignParentTop="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/str_grey_contact_profile_add_info_popup_title"
                android:id="@+id/txtVideoFilename"
                android:textColor="#37632B"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_centerInParent="true" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/btnAddInfoPopupClose"
                android:src="@drawable/btnclose"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:layout_marginLeft="15dp" />
            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:id="@+id/btnAddInfoPopupConfirm"
                android:src="@drawable/checknav"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:layout_marginRight="15dp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/bodyLayout"
            android:background="#ffffff">
            <ListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/infoList"
                android:listSelector="@android:color/transparent"
                android:dividerHeight="1dp"
                android:divider="#c8c7cc"
                android:scrollbars="none"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
