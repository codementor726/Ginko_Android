<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout"
    android:background="#ffffffff"
    tools:context="com.ginko.activity.cb.CBMainActivity" >
    <RelativeLayout
        android:id="@+id/headerlayout"
        android:background="#ffc4ffb6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/btnPrev"
            android:layout_width="22dip"
            android:layout_height="25dip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15.0dip"
            android:adjustViewBounds="false"
            android:src="@drawable/part_a_btn_back_nav"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"/>

        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="26.0sp"
            android:textStyle="bold"
            android:textColor="#ff37632b"
            android:id="@+id/txtTitle"
            android:text="@string/title_activity_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_title_bar_top_bottom_padding"
            android:layout_marginBottom="@dimen/activity_title_bar_top_bottom_padding"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/btnAddCBEmail"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15.0dip"
            android:src="@drawable/cb_add"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bodyLayout"
        android:layout_below="@+id/headerlayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/leafbgforblank">

        <TextView
            android:id="@+id/txtDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/blue_text"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>
        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical"
            android:visibility="invisible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#87749e"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="@string/builder_description_secure"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#87749e"/>
            <ListView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:scrollbars="none"
                android:layout_below="@+id/imgSeperator" >
            </ListView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="#7e5785"
            android:gravity="center"
            android:layout_alignParentBottom="true">
                <ImageView
                    android:id="@+id/btnRequestExchange"
                    android:layout_width="50dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/exchange_white"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>