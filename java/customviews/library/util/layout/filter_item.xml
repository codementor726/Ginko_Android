<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="#ff262626"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	 >

        <ImageView
            android:id="@+id/imgFilter"
            android:layout_width="@dimen/filter_horizontal_listview_item_height"
            android:layout_height="@dimen/filter_horizontal_listview_item_height"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/filter_image1" />

        <TextView
            android:id="@+id/txtFilterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/imgFilter"
            android:layout_centerHorizontal="true"
            android:text="BookStore"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>
