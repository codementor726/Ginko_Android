<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    tools:context="com.ginko.activity.im.ImPreActivity" >
    <RelativeLayout
        android:id="@+id/headerlayout"
        android:background="#ffc4ffb6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/btnPrev"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15.0dip"
            android:src="@drawable/btn_prev"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/btnTrash"
            android:layout_width="22dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15.0dip"
            android:src="@drawable/btn_chat_delete"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="26.0sp"
            android:textStyle="bold"
            android:textColor="#ff37632b"
            android:id="@+id/txtTitle"
            android:text="@string/search_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_title_bar_top_bottom_padding"
            android:layout_marginBottom="@dimen/activity_title_bar_top_bottom_padding"
            android:layout_centerInParent="true" />

        <ImageView
            android:id="@+id/btnChatSelection"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15.0dip"
            android:src="@drawable/btnchatnav"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15.0dip"
            android:src="@drawable/btnclose"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/bodyLayout"
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/headerlayout"
        android:background="@drawable/leafbgforblank"
        android:weightSum="1.0"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#c5c5cb"
            android:id="@+id/searchLayout"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:focusableInTouchMode="true"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:layout_weight="0.12"
            android:weightSum="1.0">
            <ImageView
                android:id="@+id/btnEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/str_cancel"
                android:layout_weight="0.1"
                android:textColor="#007aff"
                android:layout_marginRight="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/editcontact"
                android:background="@android:color/transparent"
                />
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.9">

                <EditText
                    android:id="@+id/edtSearch"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/contact_search_edittext_background"
                    android:hint="@string/search_label"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:paddingLeft="35dp"
                    android:paddingRight="30dp"
                    android:textColor="#000000"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:focusableInTouchMode="true"
                    android:textSize="18sp"/>
                <ImageView
                    android:id="@+id/imgCancelSearch"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/search_cancel_button"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/imageView6"
                    android:src="@drawable/edit_action_search_icon"
                    android:layout_centerVertical="true" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:background="@android:color/transparent"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.15"
            android:orientation="horizontal"
            android:layout_below="@+id/searchLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <ImageButton
                android:id="@+id/btn_chat_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/chat1_1"
                android:contentDescription="@string/button" />

            <ImageButton
                android:id="@+id/btn_msg_wall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/chat2_2"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.73"
            android:layout_below="@+id/layout_tab">
            <com.ginko.customview.MyViewPager
                android:id="@+id/vPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:flipInterval="30"
                android:layout_above="@+id/deleteLayout"
                android:persistentDrawingCache="animation" />

            <LinearLayout
                android:id="@+id/deleteLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#c7c7c7"/>
                <ImageView
                    android:id="@+id/btnDelete"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img_trash"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>