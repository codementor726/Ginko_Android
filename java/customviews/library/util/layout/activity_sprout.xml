<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout">
    <RelativeLayout
        android:id="@+id/headerlayout"
        android:background="#ffc4ffb6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="26.0sp"
            android:textStyle="bold"
            android:textColor="#ff37632b"
            android:id="@+id/txtSprout"
            android:text="@string/str_sprout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_title_bar_top_bottom_padding"
            android:layout_marginBottom="@dimen/activity_title_bar_top_bottom_padding"
            android:layout_centerInParent="true" />
        <ImageView
            android:id="@id/btnPrev"
            android:layout_width="20.0dip"
            android:layout_height="25.0dip"
            android:layout_marginLeft="15.0dip"
            android:src="@drawable/part_a_btn_back_nav"
            android:scaleType="fitXY"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@id/btnClose"
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15.0dip"
            android:src="@drawable/btn_home_close"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/imgGPSOnOff"
            android:layout_width="35.0dip"
            android:layout_height="35.0dip"
            android:layout_alignParentRight="true"
            android:src="@drawable/gpsoff"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp" />
        <TextView
            android:id="@+id/txtSproutOneHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:text="1"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:layout_marginTop="5dp" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bodyLayout"
        android:background="#ffffffff"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/headerlayout">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:text="@string/str_invite_share_into"
            android:textColor="#000000"
            android:textSize="22sp"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchLayout"
            android:layout_below="@+id/title"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btnEdit"
                android:scaleType="fitXY"
                android:src="@drawable/editcontact"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/btnEdit">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#6d6d6d"/>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true">

                    <EditText
                        android:id="@+id/edtSearch"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:hint="@string/str_sprout_search"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:singleLine="true"
                        android:paddingLeft="30dp"
                        android:paddingRight="32dp"
                        android:textColor="#000000"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textSize="20sp"
                        android:nextFocusUp="@+id/edtSearch"
                        android:nextFocusLeft="@+id/edtSearch"/>
                    <ImageView
                        android:id="@+id/imgCancelSearch"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:scaleType="fitXY"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="7dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/search_cancel_button"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView6"
                        android:src="@drawable/edit_action_search_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#6d6d6d"/>
            </LinearLayout>
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/contact_navi"
            android:layout_below="@+id/searchLayout"
            android:flipInterval="30"
            android:persistentDrawingCache="animation"/>

        <LinearLayout
            android:id="@+id/contact_navi"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/tabbar">

            <ImageButton
                android:id="@+id/btn_exchanged"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="18dp"
                android:scaleType="fitCenter"
                android:src="@drawable/btntabexchange" />

            <LinearLayout
                android:id="@+id/blankLayout6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/btnDeleteContact"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:src="@drawable/btn_delete_disabled"
                    android:visibility="invisible"
                    />

            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_pending"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/gps_blank" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/contact_navi"
            android:background="@android:color/transparent"
            android:weightSum="3">
            <LinearLayout
                android:id="@+id/flag_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sprout_tab_pointer"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <LinearLayout
                android:id="@+id/flag_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sprout_tab_pointer"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/btnGps"
            android:layout_width="70dp"
            android:layout_height="110dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:src="@drawable/fingerprint_disabled"/>
    </RelativeLayout>
</RelativeLayout>