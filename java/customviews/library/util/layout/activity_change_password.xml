<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/leafbgforblank">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom"
        android:background="@drawable/leafbgforblank"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:id="@+id/layout_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/textView"
                style="@style/lbl_h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Change Password"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/et_password"
                style="@style/et_general"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:hint="Current Password"
                android:inputType="textPassword"
                android:paddingBottom="10dp"
                android:paddingTop="15dp"
                android:text="" />

            <EditText
                android:id="@+id/et_new_password"
                style="@style/et_general"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_password"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:hint="Choose a New Password"
                android:inputType="textPassword"
                android:paddingBottom="20dp"
                android:paddingTop="15dp"
                android:text="" />

            <EditText
                android:id="@+id/et_new_password1"
                style="@style/et_general"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_new_password"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:hint="Re-Enter New Password"
                android:inputType="textPassword"
                android:paddingBottom="20dp"
                android:paddingTop="15dp"
                android:text="" />
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/tabbar"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btn_changepwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@android:color/transparent"
                android:text="Change Password"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
