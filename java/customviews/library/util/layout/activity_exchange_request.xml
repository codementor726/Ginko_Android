<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayout"
    android:background="#ffffffff"
    tools:context="com.ginko.activity.exchange.ExchangeRequestActivity" >
    <RelativeLayout
        android:id="@+id/headerlayout"
        android:background="#ffc4ffb6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="26.0sp"
            android:textStyle="bold"
            android:textColor="#ff37632b"
            android:id="@+id/txtTitle"
            android:text="@string/str_request_exchange_header_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_title_bar_top_bottom_padding"
            android:layout_marginBottom="@dimen/activity_title_bar_top_bottom_padding"
            android:layout_centerInParent="true" />
        <ImageView
            android:id="@+id/btnPrev"
            android:layout_width="20.0dip"
            android:layout_height="25.0dip"
            android:layout_marginLeft="15.0dip"
            android:src="@drawable/part_a_btn_back_nav"
            android:scaleType="fitXY"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15.0dip"
            android:src="@drawable/btn_home_close"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/btnInviteContact"
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15.0dip"
            android:src="@drawable/addbtn"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bodyLayout"
        android:layout_below="@+id/headerlayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:id="@+id/txtPageHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:text="@string/str_invite_share_into"
            android:textColor="#000000"
            android:textSize="22sp"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchLayout"
            android:layout_below="@+id/txtPageHint"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/btnEdit"
                android:scaleType="fitXY"
                android:src="@drawable/editcontact"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@+id/btnEdit">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#6d6d6d"/>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true">

                    <EditText
                        android:id="@+id/edtSearch"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:hint="@string/str_sprout_search"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:singleLine="true"
                        android:paddingLeft="30dp"
                        android:paddingRight="32dp"
                        android:textColor="#000000"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textSize="20sp"
                        android:nextFocusUp="@+id/edtSearch"
                        android:nextFocusLeft="@+id/edtSearch"/>
                    <ImageView
                        android:id="@+id/imgCancelSearch"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:scaleType="fitXY"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="7dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/search_cancel_button"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView6"
                        android:src="@drawable/edit_action_search_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#6d6d6d"/>
            </LinearLayout>
        </RelativeLayout>

        <com.ginko.customview.MyViewPager
            android:id="@+id/vPager"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:flipInterval="30"
            android:persistentDrawingCache="animation"
            android:layout_above="@+id/bottomLayout"
            android:layout_below="@+id/searchLayout" />

        <LinearLayout
            android:id="@+id/bottomLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contact_navi"
                android:visibility="visible"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:id="@+id/flag_left"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:visibility="invisible">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/sprout_tab_pointer"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/flag_middle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/sprout_tab_pointer"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/flag_right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:visibility="invisible"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/sprout_tab_pointer"
                            android:layout_gravity="center_horizontal"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="65dp"
                    android:layout_alignParentBottom="true"
                    android:background="#7e5785">

                    <RelativeLayout
                        android:id="@+id/btn_pending_request"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:onClick="onClickPending" >

                        <ImageButton
                            android:id="@+id/pending_request_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_centerInParent="true"
                            android:background="@android:color/transparent"
                            android:onClick="onClickPending"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/btn_pending" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/pending_request_count"
                            android:minWidth="25dp"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:text="1"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:singleLine="true"
                            android:gravity="center"
                            android:background="@drawable/red_number_badge_bg"
                            android:layout_marginLeft="13dp"
                            android:layout_marginTop="5dp"
                            android:layout_alignTop="@+id/pending_request_icon"
                            android:layout_alignRight="@+id/pending_request_icon"
                            android:visibility="invisible"
                            />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_invite"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:onClick="onClickInvite" >

                        <ImageButton
                            android:id="@+id/invite_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:onClick="onClickInvite"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/btn_invite_blank" >
                        </ImageButton>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/invite_count"
                            android:minWidth="25dp"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:text="12"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:singleLine="true"
                            android:gravity="center"
                            android:background="@drawable/red_number_badge_bg"
                            android:layout_marginLeft="13dp"
                            android:layout_marginTop="5dp"
                            android:layout_alignTop="@+id/invite_icon"
                            android:layout_alignRight="@+id/invite_icon"
                            android:visibility="invisible"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/btn_requests"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:onClick="onClickRequest" >

                        <ImageButton
                            android:id="@+id/requests_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:onClick="onClickRequest"
                            android:padding="10dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/btn_request_blank" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/request_count"
                            android:minWidth="25dp"
                            android:textColor="#ffffff"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:text="12"
                            android:paddingLeft="3dp"
                            android:paddingRight="3dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:singleLine="true"
                            android:gravity="center"
                            android:background="@drawable/red_number_badge_bg"
                            android:layout_marginLeft="13dp"
                            android:layout_marginTop="5dp"
                            android:layout_alignTop="@+id/requests_icon"
                            android:layout_alignRight="@+id/requests_icon"
                            android:visibility="invisible"
                            />

                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="55dp"
                android:id="@+id/deleteLayout"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="#7e5785"
                android:visibility="gone"
                android:layout_alignParentBottom="true">
                <ImageView
                    android:id="@+id/btnDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:src="@drawable/img_trash_white_border"
                    android:scaleType="fitCenter"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>