<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/share_profile_field_item_height"
        android:id="@+id/itemLayout">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/fieldLayout"
            android:paddingLeft="@dimen/share_profile_field_item_left_padding"
            android:paddingRight="@dimen/share_profile_field_item_right_padding"
            android:layout_above="@+id/bottom_divider">
            <TextView
                android:layout_width="@dimen/share_profile_field_item_fieldname_width"
                android:layout_height="wrap_content"
                android:id="@+id/txtFieldName"
                android:text="Address."
                android:textSize="@dimen/share_profile_field_item_textsize"
                android:textColor="#6e4270"
                android:gravity="right"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtFieldValue"
                android:text="abcd"
                android:gravity="left"
                android:layout_marginLeft="@dimen/share_profile_field_item_fieldvalue_left_margin"
                android:textSize="@dimen/share_profile_field_item_textsize"
                android:textColor="#6e4270"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/profile_share_field_item_divider_color"
            android:id="@+id/bottom_divider"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
</LinearLayout>
