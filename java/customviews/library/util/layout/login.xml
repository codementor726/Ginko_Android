<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/part_a_splash_bg"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headerlayout"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_gravity="top"
        android:background="#c4ffb6"
        android:layout_alignParentTop="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/title_activity_login"
            android:id="@+id/textViewTitle"
            android:textColor="#2f4f2d"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/title_activity_login"
            android:adjustViewBounds="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:id="@+id/txtLogin"
            android:textColor="#2f4f2d"
            android:textSize="22sp" />
        <LinearLayout
            android:id="@+id/backLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:adjustViewBounds="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/btnPrev"
                android:layout_width="22dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/part_a_btn_back_nav"
                android:background="@android:color/transparent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/textbutton_back"
                android:adjustViewBounds="true"
                android:textColor="#2f4f2d"
                android:textSize="22sp"
                />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:id="@+id/bodyLayout">

        <LinearLayout
            android:id="@+id/blankLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.43"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/blankLayout5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:orientation="vertical"
                tools:ignore="NestedWeights" >
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:adjustViewBounds="true"
                android:contentDescription="@string/logo"
                android:scaleType="fitXY"
                android:src="@drawable/part_a_logo" />

            <LinearLayout
                android:id="@+id/blankLayout6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blankLayout3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.20"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/blankLayout10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.08"
                android:orientation="vertical"
                tools:ignore="NestedWeights" />

            <LinearLayout
                android:id="@+id/blankLayout12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.84"
                android:background="@drawable/part_a_field_bg"
                android:orientation="vertical"
                tools:ignore="NestedWeights" >

                <EditText
                    android:id="@+id/edit_username"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.48"
                    android:background="@android:color/transparent"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF" />

                <ImageView
                    android:id="@+id/imageViewSeperator1"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="0.01"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/image"
                    android:scaleType="fitXY"
                    android:src="@drawable/part_a_seperator_purple" />

                <EditText
                    android:id="@+id/edit_password"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.48"
                    android:background="@android:color/transparent"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/blankLayout11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.08"
                android:orientation="vertical"
                tools:ignore="NestedWeights" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blankLayout4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.23"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/blankLayoutOr"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.22"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="NestedWeights" >

                <LinearLayout
                    android:id="@+id/blankLayout8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:orientation="vertical" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.8"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/logo"
                    android:scaleType="fitXY"
                    android:src="@drawable/part_a_register_bottom" />

                <LinearLayout
                    android:id="@+id/blankLayout9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:orientation="vertical" />
            </LinearLayout>

            <com.facebook.widget.LoginButton
                   xmlns:fb="http://schemas.android.com/apk/res-auto"
                android:id="@+id/authButton"
                  style="?android:attr/buttonStyleSmall"
                   android:background="@android:color/transparent"
                      android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp" />

            <Button
                android:id="@+id/buttonForgotPassword"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.33"
                android:background="@android:color/transparent"
                android:onClick="forgotPwdClicked"
                android:text="@string/forgot_password"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:id="@+id/blankLayout13"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.11"
                android:orientation="vertical" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>