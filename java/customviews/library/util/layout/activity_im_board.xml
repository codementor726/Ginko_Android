<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rootLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/headerlayout"
        android:background="#ffc4ffb6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <TextView
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#ff37632b"
            android:id="@+id/txtContactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_title_bar_top_bottom_padding"
            android:layout_marginBottom="@dimen/activity_title_bar_top_bottom_padding"
            android:layout_centerInParent="true" />
        <ImageView
            android:id="@id/btnPrev"
            android:layout_width="20.0dip"
            android:layout_height="25.0dip"
            android:layout_marginLeft="15.0dip"
            android:src="@drawable/part_a_btn_back_nav"
            android:scaleType="fitXY"
            android:layout_centerVertical="true" />
        <ImageView
            android:id="@+id/btnDelete"
            android:visibility="gone"
            android:layout_width="20.0dip"
            android:layout_height="25.0dip"
            android:layout_marginLeft="15.0dip"
            android:src="@drawable/btn_chat_delete"
            android:scaleType="fitXY"
            android:layout_centerVertical="true" />
        <ImageView
            android:id="@+id/btnClose"
            android:visibility="gone"
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:layout_marginRight="15.0dip"
            android:src="@drawable/btnclose"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bodylayout"
        android:background="#ffffffff"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/headerlayout">
        <RelativeLayout
            android:id="@+id/messageLayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/bottomlayout">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <ListView
                    android:id="@+id/messageListView"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="5.0dip"
                    android:paddingBottom="5.0dip"
                    android:visibility="gone"
                    android:scrollbars="none"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:listSelector="@null"
                    android:transcriptMode="normal"
                    android:divider="@null" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <com.ginko.activity.im.PullToRefreshListView
                    android:id="@+id/pullToRefreshView"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="5.0dip"
                    android:paddingBottom="5.0dip"
                    android:scrollbars="none"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:listSelector="@android:color/transparent"
                    android:transcriptMode="normal"
                    android:cacheColorHint="@android:color/transparent"
                    android:divider="@null"
                    android:dividerHeight="0.0dip" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/bottomlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgSeperator"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/seperator"
                    android:scaleType="fitXY" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/emoticonTypeLayout"
                    android:paddingLeft="60.0dip"
                    android:paddingTop="10.0dip"
                    android:paddingRight="60.0dip"
                    android:paddingBottom="10.0dip"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <ImageView
                        android:id="@+id/emoticonPuple1"
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_marginRight="30.0dip"
                        android:src="@drawable/emoji_puple1_normal"
                        android:scaleType="fitCenter"
                        android:layout_weight="1.0" />
                    <ImageView
                        android:id="@+id/emoticonPuple2"
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_marginRight="30.0dip"
                        android:src="@drawable/emoji_puple2_normal"
                        android:scaleType="fitCenter"
                        android:layout_weight="1.0" />
                    <ImageView
                        android:id="@+id/emoticonPuple3"
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_marginRight="30.0dip"
                        android:src="@drawable/emoji_puple3_normal"
                        android:scaleType="fitCenter"
                        android:layout_weight="1.0" />
                    <ImageView
                        android:id="@+id/emoticonPuple4"
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:src="@drawable/emoji_puple4_normal"
                        android:scaleType="fitCenter"
                        android:layout_weight="1.0" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/chatInputMethodLayout"
                    android:background="#ff72426e"
                    android:paddingLeft="60.0dip"
                    android:paddingTop="10.0dip"
                    android:paddingRight="60.0dip"
                    android:paddingBottom="10.0dip"
                    android:visibility="visible"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgBtnLocation"
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_marginRight="30.0dip"
                        android:src="@drawable/btnchat_location"
                        android:scaleType="fitCenter"
                        android:layout_weight="1.0" />
                    <ImageView
                        android:id="@+id/imgBtnPhoto"
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_marginRight="30.0dip"
                        android:src="@drawable/btnchat_camera"
                        android:scaleType="fitCenter"
                        android:layout_weight="1.0" />
                    <ImageView
                        android:id="@+id/imgBtnVideo"
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:layout_marginRight="30.0dip"
                        android:src="@drawable/btnchat_gallery"
                        android:scaleType="fitCenter"
                        android:layout_weight="1.0" />
                    <ImageView
                        android:id="@+id/imgBtnEmoticon"
                        android:layout_width="0.0dip"
                        android:layout_height="40.0dip"
                        android:src="@drawable/btnchat_emoticon"
                        android:scaleType="fitCenter" android:layout_weight="1.0" />
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/chatInputLayout"
                    android:background="#ff72426e"
                    android:paddingLeft="10.0dip"
                    android:paddingTop="10.0dip"
                    android:paddingRight="10.0dip"
                    android:paddingBottom="10.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    >
                    <ImageView
                        android:id="@+id/imgBtnEditChat"
                        android:layout_width="40.0dip"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btnchatedit"
                        android:scaleType="fitCenter"
                        android:layout_centerVertical="true" />
                    <ImageView
                        android:id="@+id/imgRecordingMic"
                        android:visibility="invisible"
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        android:src="@drawable/mic_sel"
                        android:scaleType="fitCenter"
                        android:layout_centerVertical="true" />
                    <!-- :nextFocusUp and :nextFocusLeft have been set to the id of this component
     to prevent the dummy from receiving focus again -->
                    <com.ginko.activity.im.ImInputEditTExt
                        android:textSize="20.0sp"
                        android:textColor="#ff000000"
                        android:id="@+id/textMessage"
                        android:background="@drawable/chat_editmessage_background"
                        android:paddingLeft="10.0dip"
                        android:paddingTop="10.0dip"
                        android:paddingRight="10.0dip"
                        android:paddingBottom="10.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:maxHeight="75.0dip"
                        android:layout_toLeftOf="@+id/imgBtnSendMessage"
                        android:layout_toRightOf="@+id/imgBtnEditChat"
                        android:layout_centerVertical="true"
                        android:inputType="textMultiLine"
                        android:nextFocusUp="@+id/textMessage"
                        android:nextFocusLeft="@+id/textMessage"/>
                    <ImageView
                        android:id="@+id/imgBtnMic"
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        android:src="@drawable/mic"
                        android:scaleType="fitCenter"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />
                    <ImageView
                        android:id="@+id/imgBtnSendMessage"
                        android:visibility="invisible"
                        android:layout_width="40.0dip"
                        android:layout_height="40.0dip"
                        android:src="@drawable/btnchat_sendmessage"
                        android:scaleType="fitCenter"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/trashlayout"
                    android:background="#ff72426e"
                    android:paddingTop="15.0dip"
                    android:paddingBottom="15.0dip"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imgDeleteChatHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/btn_chat_message_delete"
                        android:scaleType="fitCenter"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/footer_for_emoticons"
                    android:visibility="gone"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>