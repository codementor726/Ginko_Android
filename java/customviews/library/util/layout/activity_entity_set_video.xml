<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/part_a_home_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/blankLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/blankLayout3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:orientation="vertical"
            tools:ignore="NestedWeights" >
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:adjustViewBounds="true"
            android:contentDescription="@string/logo"
            android:scaleType="fitXY"
            android:src="@drawable/part_a_comment_choose_home_video" />

        <LinearLayout
            android:id="@+id/blankLayout4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:orientation="vertical"
            tools:ignore="NestedWeights" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/blankLayout5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/blankLayout14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical"
            tools:ignore="NestedWeights" />

        <ImageButton
            android:id="@+id/btnCameraInHomeVideo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.11"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/button"
            android:onClick="onBtnCameraInHomeVideo"
            android:scaleType="fitXY"
            android:src="@drawable/part_a_btn_video_green"
            tools:ignore="NestedWeights" />

        <LinearLayout
            android:id="@+id/blankLayout15"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:orientation="vertical"
            tools:ignore="NestedWeights" />

        <ImageButton
            android:id="@+id/btnCameraRollInHomeVideo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.11"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/button"
            android:onClick="onBtnCameraRollInHomeVideo"
            android:scaleType="fitXY"
            android:src="@drawable/part_a_btn_cameraroll_green"
            tools:ignore="NestedWeights" />

        <LinearLayout
            android:id="@+id/blankLayout16"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical"
            tools:ignore="NestedWeights" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/blankLayout6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>